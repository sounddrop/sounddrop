  <div class="artwork">
    <div class="container-play-button">
      <img class="container-image" src="<%=@artwork%>">
      <%= render partial: "load_playbuttons" %>
    </div>
  </div>

  <div class="container-like-button">
      <div id="likebutton" class="like"></br>
        <%= button_to "like", upvote_story_path(@story), {form_class: "button-like", :id => "like_button", method: :post} %>
      </div>
      <div id="votes" class="vote">
        <%= @story.votes.count %>
      </div>
  </div>

<div class="story-info">
   <div class ="story-title">
      <p><%=@story.title%></p>
   </div>

    <div class ="story-description">
      <p><%=@story.description%></p>
   </div>
    
   <div class="story-place">
      <p><%=@place_name %></p>
   </div>
</div>

  <div class="container-fluid">
    <h4>Hear more stories:</h4>
      <% @playlist.tracks.each do |track| %>
        <% if track.id != @story_at_sc.id %>
          <a href="/playlists/<%=@playlist.id%>/<%=track.id%>" data-no-turbolink><%= track.title %></a></br>
        <% end %>
      <% end %><br>
  </div>

<script>
  var story = {
    id: <%= @story.id %>
  }
  var storyAtSC = {
     id: <%= @story_at_sc.id %>
  }

</script>

