<!DOCTYPE html>
<html>
<head>
  <title>SoundDrop</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/assets/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/assets/bootstrap-theme.css">
  <link rel="stylesheet" type="text/css" href="/assets/drop.css">
  <script>var soundDropMarker = "<%= asset_path('sounddrop-logo.png') %>";</script>
  <script src="https://connect.soundcloud.com/sdk/sdk-3.1.2.js"></script>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <!-- Site header and navigation -->

</head>

<body>
  <header class="header-container">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <a href= / ><%= image_tag "sounddrop-logo-name.png", class: "sounddrop-image", alt: "SoundDrop Logo"%></a>
            <%= yield(:api_explorer)%>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Create SoundDrop', new_drop_path %></li>
            <li><%= link_to 'My Drops', my_drops_user_path %></li>
            <li><%= link_to 'About', welcome_about_path %></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <div class='container'>
    <% [:notice, :error, :alert, :success].each do |level| %>
      <% unless flash[level].blank? %>
        <p class="container alert alert-dismissable alert-<%= flash_class(level) %>">
          <%= flash[level] %>
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        </p>
      <% end %>
    <% end %>

    <%= yield %>
  </div>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-58231740-1', 'auto');
    ga('send', 'pageview');
  </script>
  <footer class=text-center><a href='http://soundcloud.com/imprint'><small>Imprint</small></a> | <a href='http://soundcloud.com/pages/privacy'><small>Privacy Policy</small></a></small></footer>
</body>
</html>
